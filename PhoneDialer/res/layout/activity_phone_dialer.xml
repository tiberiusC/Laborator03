<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.lab03.phonedialer.PhoneDialerActivity" >


    
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idPhoneNumber"
        android:enabled="false"
        />
    
    <GridLayout 
        android:gravity="center"
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="3">
        
        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/idDelete"
            android:background="@drawable/backspace"
            
            />
        
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="1"
            android:id="@+id/idUnu"/>
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="2"
            android:id="@+id/idDoi"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="3"
            android:id="@+id/idTrei"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:id="@+id/idPatru"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            android:id="@+id/idCinci"/>
        <Button
             android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            android:id="@+id/idSase"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="7"
            android:id="@+id/idSapte"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="8"
            android:id="@+id/idOpt"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="9"
            android:id="@+id/idNoua"/>
       
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="*"
            android:id="@+id/idStar"/>
        <Button
             android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_row="4"
            android:layout_column="1"
            android:text="0"
            android:id="@+id/idZero"/>
        <Button 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:text="#"
            android:id="@+id/idDiez"/>
        
        <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:id="@+id/idCall"
            android:background="@drawable/call"/>
        
         <ImageButton 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:id="@+id/idCancel"
            android:background="@drawable/hangup"/>
        
    </GridLayout>

</RelativeLayout>
